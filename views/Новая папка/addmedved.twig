{% extends "BASE.twig" %}

{% block rows %}
<div>
	<h1>Добавление Плюшевого медведя</h1>
	<form role="form" method="POST" action="/addmedved">
		<div class="form-group row">
			<label for="medved-name" class="col-sm-2 form-control-label">Название</label>
			<div class="col-sm-10">
				<input type="text" class="form-control" name="medved-name">
			</div>
		</div>					
		<div class="form-group row">
			<label for="medved-color" class="col-sm-2 control-label">Цвет</label>
			<div class="col-sm-10">
				<input type="text" class="form-control" name="medved-color">
			</div>
		</div>					
		<div class="form-group row">
			<label for="medved-weight" class="col-sm-2 control-label">Вес</label>
			<div class="col-sm-10">
				<input type="text" class="form-control" name="medved-weight">
			</div>
		</div>
		<div class="form-group row">
			<label for="medved-price" class="col-sm-2 control-label">Цена</label>
			<div class="col-sm-10">
				<input type="text" class="form-control" name="medved-price">
			</div>
		</div>
		<div class="form-group row">
			<label for="medved-prod" class="col-sm-2 control-label">Производитель</label>
			<div class="col-sm-10">
				<select class="form-control" name="medved-prod">
				{% for p in prod %}
					<option value={{p.pk_producer}}>{{p.name_producer}}</option>
				{% endfor %}
				</select>
			</div>
		</div>
		<div class="form-group row">
			<label for="medved-image" class="col-sm-2 control-label">Картинка медведя</label>
			<div class="col-sm-10">
				<input type="file" class="form-control-file" name="medved-image">
			</div>
		</div>
		<div class="form-group row">
			<label for="medved-description" class="col-sm-2 control-label"> Описание</label>
			<div class="col-sm-10">
				<textarea rows="5" class="form-control" name="medved-description"></textarea>
			</div>
		</div>
		<button type="button" class="btn btn-default" onclick="javascript:history.back()">Отмена</button>
		<button type="submit" class="btn btn-primary">Добавить</button>
	</form>
</div>
{% endblock %}